<Window x:Class="course.EquipmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/редактирование оборудования" 
        Height="583" 
        Width="599"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Название оборудования" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtName" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Тип оборудования" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbType" Height="25" Margin="0,0,0,15">
                <ComboBoxItem Content="Ноутбук"/>
                <ComboBoxItem Content="Компьютер"/>
                <ComboBoxItem Content="Принтер"/>
                <ComboBoxItem Content="МФУ"/>
                <ComboBoxItem Content="Сканер"/>
                <ComboBoxItem Content="Монитор"/>
                <ComboBoxItem Content="Проектор"/>
                <ComboBoxItem Content="Телефон"/>
            </ComboBox>

            <TextBlock Text="Серийный номер" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtSerialNumber" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Дата покупки" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpPurchaseDate" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Статус" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbStatus" Height="25" Margin="0,0,0,15">
                <ComboBoxItem Content="В эксплуатации"/>
                <ComboBoxItem Content="На складе"/>
                <ComboBoxItem Content="На ремонте"/>
                <ComboBoxItem Content="Списан"/>
            </ComboBox>

            <TextBlock Text="Местоположение" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLocation" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Стоимость (руб.)" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCost" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Описание" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" 
                    Background="#27ae60" Foreground="White" 
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" 
                    Background="#95a5a6" Foreground="White" 
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>