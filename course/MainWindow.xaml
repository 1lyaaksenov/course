<Window x:Class="course.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет оргтехники" 
        Height="763" 
        Width="1076"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#2c3e50" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Система учета оргтехники" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Padding="20,15"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Роль: " 
                              Foreground="#ecf0f1" 
                              FontSize="12"
                              Margin="0,0,5,0"/>
                    <TextBlock x:Name="txtCurrentRole" 
                              Foreground="#3498db" 
                              FontSize="12"
                              FontWeight="Bold"/>
                    <Button x:Name="btnExportAll" 
                            Content="📊 Экспорт в Excel" 
                            Click="ExportAllToExcel_Click"
                            Background="#27ae60" 
                            Foreground="White"
                            BorderThickness="0"
                            Margin="10,0,0,0"
                            Padding="10,5"/>
                    <Button x:Name="btnLogout" 
                            Content="Выйти" 
                            Click="Logout_Click"
                            Background="Transparent" 
                            Foreground="#e74c3c"
                            BorderThickness="0"
                            Margin="10,0,20,0"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1">
            <!-- Вкладка просмотра техники -->
            <TabItem Header="📊 Просмотр техники">
                <StackPanel>
                    <Border Background="#ecf0f1" Padding="10" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Список всей оргтехники в организации" 
                                      FontWeight="SemiBold" 
                                      FontSize="13"
                                      VerticalAlignment="Center"/>
                            <Button Content="📥 Экспорт в Excel" 
                                    Click="ExportEquipmentToExcel_Click"
                                    Background="#27ae60" 
                                    Foreground="White"
                                    Padding="10,5"
                                    Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="dgEquipment" Height="500">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="120"/>
                            <DataGridTextColumn Header="Серийный номер" Binding="{Binding SerialNumber}" Width="120"/>
                            <DataGridTextColumn Header="Дата покупки" Binding="{Binding PurchaseDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Местоположение" Binding="{Binding Location}" Width="120"/>
                            <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Вкладка управления техникой -->
            <TabItem x:Name="tabManagement" Header="🛠️ Управление техникой">
                <StackPanel>
                    <Border Background="#ecf0f1" Padding="10" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Управление оргтехникой" 
                                      FontWeight="SemiBold" 
                                      FontSize="13"
                                      VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                <Button Content="➕ Добавить" 
                                        Click="AddEquipment_Click" 
                                        Background="#27ae60" 
                                        Foreground="White"/>
                                <Button Content="✏️ Редактировать" 
                                        Click="EditEquipment_Click" 
                                        Background="#3498db" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                                <Button Content="🗑️ Удалить" 
                                        Click="DeleteEquipment_Click" 
                                        Background="#e74c3c" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                                <Button Content="📥 Экспорт" 
                                        Click="ExportEquipmentToExcel_Click"
                                        Background="#9b59b6" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                                <Button Content="🔄 Обновить" 
                                        Click="RefreshEquipment_Click" 
                                        Background="#95a5a6" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgEquipmentManagement" Height="450" 
                             SelectionMode="Single"
                             SelectionChanged="EquipmentSelection_Changed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="120"/>
                            <DataGridTextColumn Header="Серийный номер" Binding="{Binding SerialNumber}" Width="120"/>
                            <DataGridTextColumn Header="Дата покупки" Binding="{Binding PurchaseDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Местоположение" Binding="{Binding Location}" Width="120"/>
                            <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Вкладка пользователей -->
            <TabItem x:Name="tabUsers" Header="👥 Управление пользователями">
                <StackPanel>
                    <Border Background="#ecf0f1" Padding="10" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Управление пользователями системы" 
                                      FontWeight="SemiBold" 
                                      FontSize="13"
                                      VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                <Button Content="➕ Добавить пользователя" 
                                        Click="AddUser_Click" 
                                        Background="#27ae60" 
                                        Foreground="White"/>
                                <Button Content="🗑️ Удалить пользователя" 
                                        Click="DeleteUser_Click" 
                                        Background="#e74c3c" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                                <Button Content="📥 Экспорт" 
                                        Click="ExportUsersToExcel_Click"
                                        Background="#9b59b6" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                                <Button Content="🔄 Обновить" 
                                        Click="RefreshUsers_Click" 
                                        Background="#95a5a6" 
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgUsers" Height="450" 
                             SelectionMode="Single"
                             SelectionChanged="UserSelection_Changed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="150"/>
                            <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="120"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#34495e">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Foreground="White" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>