<Window x:Class="course.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление пользователя" 
        Height="300" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Логин" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPassword" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Роль" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbRole" Height="25" Margin="0,0,0,15">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Manager"/>
                <ComboBoxItem Content="User"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" 
                    Background="#27ae60" Foreground="White" 
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" 
                    Background="#95a5a6" Foreground="White" 
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>