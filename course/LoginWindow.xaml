<Window x:Class="course.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Учет оргтехники" 
        Height="400" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4a90e2" Offset="0"/>
            <GradientStop Color="#7b68ee" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Padding="25" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="350"
                Height="320">
            <StackPanel>
                <TextBlock Text="Учет оргтехники" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,25"
                          Foreground="#2c3e50"/>

                <TextBlock Text="Логин" 
                          FontSize="13" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"
                          Foreground="#34495e"/>
                <TextBox x:Name="txtLogin" 
                        Height="38" 
                        FontSize="14"
                        Padding="12,8"
                        VerticalContentAlignment="Center"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        VerticalAlignment="Center"/>

                <TextBlock Text="Пароль" 
                          FontSize="13" 
                          FontWeight="SemiBold"
                          Margin="0,20,0,8"
                          Foreground="#34495e"/>
                <PasswordBox x:Name="txtPassword" 
                            Height="38" 
                            FontSize="14"
                            Padding="12,8"
                            VerticalContentAlignment="Center"
                            BorderBrush="#bdc3c7"
                            BorderThickness="1"
                            VerticalAlignment="Center"/>

                <Button Content="Войти" 
                        Click="Login_Click" 
                        Height="42" 
                        Margin="0,30,0,0"
                        Background="#3498db" 
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="0"/>

                <TextBlock Text="Тестовые пользователи: admin/admin123, manager/manager123, user/user123" 
                          FontSize="10" 
                          HorizontalAlignment="Center" 
                          Margin="0,20,0,0"
                          Foreground="#7f8c8d"
                          TextWrapping="Wrap"
                          TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>